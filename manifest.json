{
	"name": "Video repeat",
	"description": "Repeat button for that one site's HTML5 video",

	"content_scripts": [ {
		"all_frames": true,
		"js": [ "youtuberepeat.content.js" ],
		"css": [ "youtuberepeat.content.css" ],
		"matches": [ "*://youtube.com/*", "*://www.youtube.com/*" ],
		"run_at": "document_end"
	} ],

	"icons": {
		"128": "images/icon128.png",
		"48": "images/icon48.png"
	},
	"version": "1.12",
	"manifest_version": 3
}
